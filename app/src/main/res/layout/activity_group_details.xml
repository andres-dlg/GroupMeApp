<?xml version="1.0" encoding="utf-8"?>

<android.support.v4.widget.NestedScrollView android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    android:fillViewport="true"
    android:orientation="vertical"
    android:clipToPadding="false"
    android:theme="@style/MyDialogTheme"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/nsSetup">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <android.support.v7.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize" 
                android:theme="@style/ToolbarGroupDetail">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_alignBottom="@+id/add_group_photo"
                    android:orientation="horizontal">

                    <TextView
                        android:gravity="center_vertical"
                        android:id="@+id/group_name"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:textColor="#ffffff"
                        android:textSize="20sp"
                        android:background="@android:color/transparent"
                        android:enabled="false"
                        android:layout_alignParentLeft="true"
                        android:layout_centerInParent="true"

                        android:focusable="true"
                        android:focusableInTouchMode="true"
                        android:singleLine="true"
                        android:scrollHorizontally="true"
                        android:ellipsize="marquee"
                        android:marqueeRepeatLimit ="marquee_forever"
                        />

                    <ImageButton
                        android:id="@+id/editGroupNameBtn"
                        android:layout_width="50dp"
                        android:layout_height="match_parent"
                        android:src="@drawable/pen"
                        android:background="@android:color/transparent"
                        android:tint="@color/mdtp_white"
                        android:visibility="gone"
                        android:foreground="?android:attr/selectableItemBackgroundBorderless"
                        android:layout_alignParentEnd="true"
                        />

                </RelativeLayout>

            </android.support.v7.widget.Toolbar>

            <ImageView
                android:id="@+id/add_group_photo"
                android:transitionName="photo"
                android:layout_width="match_parent"
                android:layout_height="203dp"
                android:background="@color/bg_add_photo"
                android:src="@drawable/ic_insert_photo_black_48dp"
                android:scaleType="centerCrop"/>

            <android.support.design.widget.FloatingActionButton
                android:id="@+id/fab"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignEnd="@id/add_group_photo"
                android:layout_alignTop="@id/add_group_photo"
                android:layout_marginRight="15dp"
                android:layout_marginTop="175dp"
                android:elevation="10dp"
                android:visibility="gone"
                android:src="@drawable/ic_add_a_photo_black_48dp"
                android:tint="@color/colorAccent"
                app:fabSize="normal" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/add_group_photo"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/textObjetive"
                        android:layout_width="68dp"
                        android:layout_height="wrap_content"
                        android:textSize="15sp"
                        android:text="Objetivo"
                        android:layout_margin="15dp"
                        />

                    <ImageButton
                        android:id="@+id/editObjetiveBtn"
                        android:layout_width="50dp"
                        android:layout_height="match_parent"
                        android:src="@drawable/pen"
                        android:background="@android:color/transparent"
                        android:visibility="gone"
                        android:tint="@color/mdtp_light_gray"
                        android:foreground="?android:attr/selectableItemBackgroundBorderless"
                        />

                </LinearLayout>



                <View
                    android:id="@+id/objetiveDivisor"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:background="@color/bg_add_photo" />

                <EditText
                    android:id="@+id/objetive"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:scrollbars="vertical"
                    android:padding="10dp"
                    android:isScrollContainer="true"
                    android:textColor="@drawable/edit_text_selector"
                    android:background="@android:color/transparent"
                    android:enabled="false"
                    android:textSize="15sp"
                    />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:background="@color/bg_add_photo" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textMembers"
                    android:layout_width="68dp"
                    android:layout_height="wrap_content"
                    android:textSize="15sp"
                    android:text="Miembros"
                    android:layout_margin="15dp"
                    />

                <ImageButton
                    android:id="@+id/addContact"
                    android:layout_width="50dp"
                    android:layout_height="match_parent"
                    android:src="@drawable/account_plus"
                    android:background="@android:color/transparent"
                    android:tint="@color/mdtp_light_gray"
                    android:visibility="gone"
                    android:foreground="?android:attr/selectableItemBackgroundBorderless"
                    />

            </LinearLayout>



                <View
                    android:id="@+id/divider"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:background="@color/bg_add_photo" />

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/rvMembers"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                </android.support.v7.widget.RecyclerView>

            </LinearLayout>

            <!--<android.support.design.widget.FloatingActionButton
                android:id="@+id/fabAddContact"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:fabSize="normal"
                android:src="@drawable/account_plus_white"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:layout_marginRight="15dp"
                android:layout_marginBottom="15dp"
                android:elevation="10dp"/>-->
        </RelativeLayout>


    </android.support.v4.widget.NestedScrollView>
