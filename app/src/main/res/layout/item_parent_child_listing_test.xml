<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    app:cardCornerRadius="4dp">

    <LinearLayout
        android:id="@+id/cardLl"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.5">

            <ImageView
                android:id="@+id/subGroupBg"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignBottom="@+id/rl"
                android:layout_marginBottom="-10dp"
                android:scaleType="centerCrop"/>

            <RelativeLayout
                android:id="@+id/rl"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center|center_vertical"
                android:layout_margin="10dp">

                <FrameLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/flo">

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/list_item_sub_group_icon"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:src="@drawable/new_user" />

                    <ProgressBar
                        android:id="@+id/homeprogress"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:indeterminateTint="@color/celestito"/>

                </FrameLayout>

                <TextView
                    android:id="@+id/tv_parentName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:textSize="20sp"
                    android:textColor="#ffffff"
                    android:layout_marginLeft="@dimen/horizontal_margin"
                    android:layout_toRightOf="@+id/flo"/>

            </RelativeLayout>

        </RelativeLayout>

        <View
            android:id="@+id/divider"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:background="@color/bg_add_photo" />

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:rowCount="1"
            android:columnCount="9"
            android:orientation="horizontal"
            android:layout_weight="0.5"
            android:layout_gravity="center_vertical">

            <ImageButton
                android:layout_columnWeight="0.25"
                android:layout_row="0"
                android:layout_column="0"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:id="@+id/chat"
                android:src="@drawable/message"
                android:background="?attr/selectableItemBackground"/>

            <View
                android:layout_width="1dp"
                android:layout_row="0"
                android:layout_column="1"
                android:layout_height="match_parent"
                android:background="@color/bg_add_photo" />

            <ImageButton
                android:id="@+id/members"
                android:src="@drawable/account"
                android:layout_height="match_parent"
                android:layout_columnWeight="0.25"
                android:layout_row="0"
                android:layout_column="2"
                android:layout_gravity="center_vertical"
                android:background="?attr/selectableItemBackground"/>

            <View
                android:layout_width="1dp"
                android:layout_row="0"
                android:layout_column="3"
                android:layout_height="match_parent"
                android:background="@color/bg_add_photo" />

            <ImageButton
                android:id="@+id/files"
                android:src="@drawable/file_multiple"
                android:layout_height="match_parent"
                android:layout_columnWeight="0.25"
                android:layout_row="0"
                android:layout_column="4"
                android:layout_gravity="center_vertical"
                android:background="?attr/selectableItemBackground"/>

            <View
                android:layout_width="1dp"
                android:layout_row="0"
                android:layout_column="5"
                android:layout_height="match_parent"
                android:background="@color/bg_add_photo" />

            <ImageButton
                android:id="@+id/add_task"
                android:src="@drawable/playlist_plus"
                android:layout_height="match_parent"
                android:layout_columnWeight="0.25"
                android:layout_row="0"
                android:layout_column="6"
                android:layout_gravity="center_vertical"
                android:background="?attr/selectableItemBackground"/>

            <View
                android:layout_width="1dp"
                android:layout_row="0"
                android:layout_column="7"
                android:layout_height="match_parent"
                android:background="@color/bg_add_photo" />


            <ImageButton
                android:id="@+id/list_item_sub_group_arrow"
                android:layout_columnWeight="0.25"
                android:layout_height="match_parent"
                android:src="@drawable/ic_arrow_down"
                android:layout_row="0"
                android:layout_column="8"
                android:layout_gravity="center_vertical"
                android:background="?attr/selectableItemBackground"/>
        </GridLayout>

        <LinearLayout
            android:id="@+id/ll_child_items"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
        </LinearLayout>

    </LinearLayout>

</android.support.v7.widget.CardView>